<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:indeterminate="true"
        android:max="100"
        android:minWidth="200dp"
        android:minHeight="50dp"
        app:layout_constraintBottom_toTopOf="@+id/ueberschrift"
        app:layout_constraintEnd_toEndOf="@+id/ueberschrift"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/postOffer_createOfferButton_Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextmhd" />

    <EditText
        android:id="@+id/createOffer_EdTxt_Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLines="1"
        android:hint="@string/postOffer_editTextDescription_description"
        app:layout_constraintBottom_toTopOf="@id/preis"
        app:layout_constraintTop_toBottomOf="@id/beschreibung" />

    <EditText
        android:id="@+id/editTextPreis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/postOffer_editTextPrice_description"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@id/foodCategory"
        app:layout_constraintTop_toBottomOf="@id/preis" />

    <EditText
        android:id="@+id/editTextmhd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:focusable="false"
        android:cursorVisible="false"
        android:hint="@string/postOffer_editTextexpirationDate_Description"
        app:layout_constraintBottom_toTopOf="@id/createOffer"
        app:layout_constraintTop_toBottomOf="@id/mhd" />

    <ImageView
        android:id="@+id/offerImage"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:contentDescription="@string/postOffer_Image"
        app:layout_constraintBottom_toTopOf="@id/beschreibung"
        app:layout_constraintTop_toBottomOf="@id/ueberschrift"
        tools:srcCompat="@tools:sample/avatars" />

    <Spinner
        android:id="@+id/foodCategorySpinner"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        app:layout_constraintBottom_toTopOf="@id/mhd"
        app:layout_constraintTop_toBottomOf="@id/foodCategory" />

    <TextView
        android:id="@+id/ueberschrift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/postOffer_headline"
        app:layout_constraintBottom_toTopOf="@id/offerImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/beschreibung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/general_description"
        app:layout_constraintBottom_toTopOf="@id/createOffer_EdTxt_Description"
        app:layout_constraintTop_toBottomOf="@id/offerImage" />

    <TextView
        android:id="@+id/preis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/general_price"
        app:layout_constraintBottom_toTopOf="@id/editTextPreis"
        app:layout_constraintTop_toBottomOf="@id/createOffer_EdTxt_Description" />

    <TextView
        android:id="@+id/foodCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/postOffer_foodCategory"
        app:layout_constraintBottom_toTopOf="@id/foodCategorySpinner"
        app:layout_constraintTop_toBottomOf="@id/editTextPreis" />

    <TextView
        android:id="@+id/mhd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/postOffer_expirationDate"
        app:layout_constraintBottom_toTopOf="@id/editTextmhd"
        app:layout_constraintTop_toBottomOf="@id/foodCategorySpinner" />
</androidx.constraintlayout.widget.ConstraintLayout>
