<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ueberschrift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/ueberschriftAnmeldung" />

    <ImageView
        android:id="@+id/foodboardImage"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:contentDescription="@string/todo"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/beschreibung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/zumTeilnehmenText" />

    <Button
        android:id="@+id/anmeldenButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/anmeldenText" />

    <TextView
        android:id="@+id/preis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/oder" />

    <Button
        android:id="@+id/registrierenButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/registrieren" />

    <TextView
        android:id="@+id/mhd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/alsGastText" />

    <Button
        android:id="@+id/alsGastAnmelden"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/als_gast_anmelden" />

</LinearLayout>